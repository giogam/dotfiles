# Font configuration (changes require restart)
font:
  # The size to use.
  size: 14
  # The normal (roman) font face to use.
  normal:
    family: Hermit 
    # Style can be specified to pick a specific face.
    style: Regular

  # The bold font face
  bold:
    family: Hermit 
    # Style can be specified to pick a specific face.
    style: Bold

  # The italic font face
  italic:
    family: Hermit
    # Style can be specified to pick a specific face.
    style: Italic
window:
  padding:
    x: 5
    y: 5

# Colors (Movie)
colors:
  # Primary colors
  primary:
    background: '0x191919'
    foreground: '0xe5e5e5'

  # Cursor colors
  #
  # Colors which should be used to draw the terminal cursor. If these are unset,
  # the cursor color will be the inverse of the cell color.
  cursor:
    text: '0x191919'
    cursor: '0xd5d8da'

  # Selection colors
  #
  # Colors which should be used to draw the selection area. If selection
  # background is unset, selection color will be the inverse of the cell colors.
  # If only text is unset the cell text color will remain the same.
  selection:
    text: '0xd5d8da'
    background: '0x191919'

  # Normal colors
  normal:
    black: '0x191919'
    red: '0x4bc98a'
    green: '0x4bc98a'
    yellow: '0x4bc98a'
    blue: '0x4bc98a'
    magenta: '0x4bc98a'
    cyan: '0x4bc98a'
    white: '0xd5d8da'

  # Bright colors
  bright:
    black: '0x191919'
    red: '0x4bc98a'
    green: '0x4bc98a'
    yellow: '0x4bc98a'
    blue: '0x4bc98a'
    magenta: '0x4bc98a'
    cyan: '0x4bc98a'
    white: '0xd5d8da'